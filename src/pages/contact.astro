---
import PageHeader from "@components/PageHeader.astro";
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import FAQ from "@components/FAQ.astro";
import clientData from "@data/clientData.json";
---

<BaseLayout
  title="Get A Quote"
  preloadImg="https://res.cloudinary.com/dxvvbtwxg/image/upload/v1715724751/High%20Desert%20Renovation/gilh8bqrxnuwxtg32mpn.webp"
>
  <PageHeader
    alt="Man on Phone"
    heading="Contact Us"
    imageUrl={{
      mobile:
        "https://res.cloudinary.com/dxvvbtwxg/image/upload/v1715724750/High%20Desert%20Renovation/lhce6dmh9rwjrgmt0dzu.webp",
      desktop:
        "https://res.cloudinary.com/dxvvbtwxg/image/upload/v1715724751/High%20Desert%20Renovation/gilh8bqrxnuwxtg32mpn.webp",
    }}
  />
  <section id="contact-1403">
    <div class="cs-container">
      <div class="cs-content">
        <span class="cs-topper">Contact Us</span>
        <h2 class="cs-title">Get in Touch</h2>
        <p class="cs-text">
          Get a FREE Quote for your next remodel or construction project from
          the most trusted renovation team in the Treasure Valley!
        </p>
        <ul class="cs-ul">
          <li class="cs-li">
            <picture class="cs-icon-wrapper">
              <img
                aria-hidden="true"
                src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/phone-76.svg"
                alt="phone icon"
                class="cs-icon"
                width="40"
                height="40"
                decoding="async"
              />
            </picture>
            <div class="cs-flex-group">
              <span class="cs-header">Phone</span>
              <a href={`tel:${clientData.phoneForTel}`} class="cs-link"
                >{clientData.phoneFormatted}
              </a>
            </div>
          </li>
          <li class="cs-li">
            <picture class="cs-icon-wrapper">
              <img
                aria-hidden="true"
                src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/mail-76.svg"
                alt="address icon"
                class="cs-icon"
                width="40"
                height="40"
                decoding="async"
              />
            </picture>
            <div class="cs-flex-group">
              <span class="cs-header">Email</span>
              <a href={`mailto:${clientData.email}`} class="cs-link"
                >{clientData.email}</a
              >
            </div>
          </li>
        </ul>
      </div>
      <!--Form-->
      <form
        class="cs-form"
        id="cs-form-1403"
        name="Contact Form"
        action="https://api.web3forms.com/submit"
        method="POST"
      >
        <h3 class="cs-h3">Make Appointment</h3>
        <label class="cs-label">
          Name
          <input
            class="cs-input"
            required
            type="text"
            id="name-1403"
            name="name"
            placeholder="Name"
          />
        </label>
        <label class="cs-label cs-email">
          Email
          <input
            class="cs-input"
            required
            type="email"
            id="email-1403"
            name="email"
            placeholder="Email"
          />
        </label>
        <label class="cs-label cs-phone">
          Phone
          <input
            class="cs-input"
            required
            type="number"
            id="phone-1403"
            name="phone"
            placeholder="Phone"
          />
        </label>
        <label class="cs-label">
          Message
          <textarea
            class="cs-input cs-textarea"
            required
            name="Message"
            id="message-1403"
            placeholder="Write message..."></textarea>
        </label>
        <input
          type="hidden"
          name="access_key"
          value="f599e47c-0776-4807-8352-856a536cd419"
        />
        <input
          type="checkbox"
          name="botcheck"
          class="hidden"
          style="display: none;"
        />
        <input
          type="hidden"
          name="redirect"
          value="https://highdesertrenovations.com/success"
        />
        <button class="cs-button-solid cs-submit" type="submit"
          >Send Message</button
        >
      </form>
    </div>
  </section>

